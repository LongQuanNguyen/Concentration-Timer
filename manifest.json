{
    "manifest_version": 3,
    "name": "Timer Extension",
    "version": "1.0",
    "permissions": ["alarms", "notifications", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./timer.png",
            "48": "./timer.png",
            "128": "./timer.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}